<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:backgroundTint="@color/browser_actions_bg_grey"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/resim1"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="150dp"
        app:srcCompat="@drawable/qrcode"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="57dp"
        android:background="#11000000"

        android:ems="10"
        android:fontFamily="@font/anton"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="389dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="299dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="57dp"
        android:background="#11000000"

        android:ems="10"
        android:fontFamily="@font/anton"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/btnKaydol"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="233dp"
        android:background="@drawable/rounded_buton2"

        android:drawableLeft="@android:drawable/ic_menu_add"
        android:fontFamily="@font/anton"

        android:onClick="btnKaydol"
        android:text="Kayıt Ol"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/btnKaydol3"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="180dp"

        android:drawableLeft="@android:drawable/ic_menu_add"
        android:fontFamily="@font/anton"

        android:onClick="btnKayıtOl"
        android:text="Kayıt Ol sayfası"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/btnKaydol2"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="124dp"

        android:background="#4CAF50"
        android:drawableLeft="@android:drawable/ic_menu_add"

        android:fontFamily="@font/anton"
        android:onClick="btnGec"
        android:text="Ana Ekrana Gec"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/btnGiris"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="289dp"
        android:background="@drawable/rounded_buton"

        android:drawableLeft="@drawable/true_check"
        android:fontFamily="@font/anton"
        android:onClick="btnGiris"
        android:text="Giriş Yap"
        android:textColor="#FFFF" />

</RelativeLayout>